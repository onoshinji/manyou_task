<p id="notice"><%= notice %></p>

<h1><%= t('view.Tasks') %></h1>
<%= form_with url: tasks_path, method: :get, local: true do |form| %>
  <%= form.text_field :search %>
  <%= form.submit 'タスク検索', name: nil %>
<% end %>

<%= form_with model: @task, url: tasks_path, method: :get, local: true do |form| %>
  <%= form.select :sort_time_limit, {'終了期限が早い順': 'hurry', '終了期限が遅い順': 'slowly'}, { include_blank: '選択してください'}, { class: 'time_limit_select' , required: true } %>
  <%= form.submit '終了期限でソートを行う'%>
<% end %>
<table>
  <thead>
    <tr>
      <th><%= t('view.Task name') %></th>
      <th><%= t('view.Content') %></th>
      <th><%= t('view.Time limit') %></th>
      <th><%= t('view.Priority') %></th>
      <th><%= t('view.Created_at') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.task_name%></td>
        <td><%= task.content%></td>
        <td><%= task.time_limit%></td>
        <td><%= task.priority %></td>
        <td><%= task.created_at.to_s(:datetime_jp)%></td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('link.new'), new_task_path %>
